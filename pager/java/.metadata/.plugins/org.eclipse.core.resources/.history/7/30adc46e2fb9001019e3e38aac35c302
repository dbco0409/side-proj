package com.pager.Controller;

import com.pager.model.Quote;
import com.pager.service.QuoteService;

import lombok.RequiredArgsConstructor;

import java.util.List;

import org.springframework.stereotype.Controller;
import org.springframework.ui.Model;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RequestBody;
import org.springframework.web.bind.annotation.RequestMapping;

@Controller  // ✅ RestController → Controller 로 변경
@RequestMapping("/quote")
@RequiredArgsConstructor
public class QuoteController {

    private final QuoteService quoteService;

    // ✅ 견적 요청 등록 (Ajax로 JSON 전송 시)
    @PostMapping("/add")
    public String addQuote(@RequestBody Quote quote) {
        quoteService.insertQuote(quote);
        return "redirect:/quote/list"; // 등록 후 리스트 페이지로 이동
    }

    // ✅ 단일 견적 조회
    @GetMapping("/{id}")
    public String getQuote(@PathVariable Long id, Model model) {
        Quote quote = quoteService.getQuote(id);
        model.addAttribute("quote", quote);
        return "quote_view"; // quote_view.html 로 이동
    }

    // ✅ 견적 리스트 페이지 렌더링
    @GetMapping("/list")
    public String list(Model model) {
        List<Quote> quotes = quoteService.allQuoteList();
        model.addAttribute("quotes", quotes);
        return "quote"; // ✅ quote.html 렌더링
    }
}