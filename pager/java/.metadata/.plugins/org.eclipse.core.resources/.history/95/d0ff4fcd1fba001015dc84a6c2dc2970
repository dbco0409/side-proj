		<script>
		function printDiv() {
		  // 인쇄할 영역 선택
		  const printContents = document.getElementById("viewGroup").innerHTML;
		
		  // 현재 페이지 전체 백업
		  const originalContents = document.body.innerHTML;
		
		  // body를 인쇄할 내용으로 교체
		  document.body.innerHTML = printContents;
		
		  // 인쇄 실행
		  window.print();
		
		  // 인쇄 후 원래 내용 복원
		  document.body.innerHTML = originalContents;
		}
		</script>
		
	

