		<script>
		document.getElementById('contactForm').addEventListener('submit', async function(e) {
		  e.preventDefault(); // ê¸°ë³¸ form ì œì¶œ ë§‰ê¸°
		
		  // ì…ë ¥ ë°ì´í„° JSONìœ¼ë¡œ ìˆ˜ì§‘
		  const data = {
		    name: document.getElementById('name').value,
		    department: document.getElementById('tim').value,
		    company: document.getElementById('company').value,
		    tel: document.getElementById('tel').value,
		    email: document.getElementById('email').value,
		    category: document.getElementById('cate1').value,
		    content: document.getElementById('contents').value
		  };
		
		  try {
		    const res = await fetch('/', {
		      method: 'POST',
		      headers: { 'Content-Type': 'application/json' },
		      body: JSON.stringify(data)
		    });
		
		    const result = await res.json();
		    if (result.success) {
		      alert(result.message);
		      e.target.reset(); // í¼ ì´ˆê¸°í™”
		    } else {
		      alert(result.message);
		    }
		  } catch (err) {
		    console.error(err);
		    alert('ì„œë²„ ì˜¤ë¥˜ê°€ ë°œìƒí–ˆìŠµë‹ˆë‹¤. ì ì‹œ í›„ ë‹¤ì‹œ ì‹œë„í•´ì£¼ì„¸ìš”.');
		  }
		});
		</script>

